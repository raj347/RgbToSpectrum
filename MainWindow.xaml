<Window x:Class="RgbToSpectrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="80"/>
            <RowDefinition Height ="520"/>
        </Grid.RowDefinitions>

        <UniformGrid Rows="3">
            <Label Name="LabelR">R=255</Label>
            <Slider Name="SliderR" Minimum="0" Maximum="255" Value="255" ValueChanged="Slider_ValueChanged"/>
            <Label Name="LabelG">G=255</Label>
            <Slider Name="SliderG" Minimum="0" Maximum="255" Value="255" ValueChanged="Slider_ValueChanged"/>
            <Label Name="LabelB">B=255</Label>
            <Slider Name="SliderB" Minimum="0" Maximum="255" Value="255" ValueChanged="Slider_ValueChanged"/>
        </UniformGrid>

        <Image Name="Image" Grid.Row="1" Stretch="None"/>
    </Grid>
</Window>
